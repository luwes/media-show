{
  "name": "media-show",
  "version": "0.0.1",
  "type": "module",
  "description": "Showcase your media player in style!",
  "keywords": [
    "media chrome",
    "video",
    "player",
    "web component",
    "custom element"
  ],
  "homepage": "https://github.com/luwes/media-show#readme",
  "bugs": {
    "url": "https://github.com/luwes/media-show/issues"
  },
  "main": "dist/media-show.js",
  "files": [
    "src",
    "dist"
  ],
  "repository": "luwes/media-show",
  "author": "Wesley Luyten <me@wesleyluyten.com> (https://wesleyluyten.com)",
  "license": "MIT",
  "scripts": {
    "dev": "web-dev-server",
    "build": "esbuild src/media-show.js --bundle --outdir=dist --sourcemap  --minify --loader:.html=text --loader:.css=text",
    "prepublishOnly": "yarn build"
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "semi": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "devDependencies": {
    "@open-wc/dev-server-hmr": "^0.1.2",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/pluginutils": "^4.2.1",
    "@web/dev-server": "^0.1.30",
    "@web/dev-server-rollup": "^0.3.15",
    "esbuild": "^0.14.30",
    "eslint": "^8.12.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.1"
  },
  "dependencies": {
    "@mux-elements/mux-player": "0.1.0-beta.8",
    "@github/template-parts": "0.5.0",
    "@shoelace-style/shoelace": "2.0.0-beta.73"
  }
}
